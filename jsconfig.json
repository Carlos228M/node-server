    "compilerOptions": {
        "module": "NodeNext",
        "baseUrl": "./",
        "paths": {
            "#lib/*": ["./src/lib/*"],
            "#dto/*": ["./src/dto/*"],
            "#schemas/*": ["./src/schemas/*"],
            "#config/*": ["./src/config/*"],
            "#controllers/*": ["./src/controllers/*"],
            "#routes/*": ["./src/routes/*"],
            "#constants/*": ["./src/constants/*"]
        }
    }
}
